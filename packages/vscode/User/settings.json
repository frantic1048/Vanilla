{
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[dockercompose]": {
    "editor.autoIndent": "advanced",
    "editor.defaultFormatter": "redhat.vscode-yaml",
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },
  "[github-actions-workflow]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[ignore]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[javascript]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[nushell]": {
    "editor.defaultFormatter": "TheNuProjectContributors.vscode-nushell-lang"
  },
  "[python]": {
    "editor.formatOnType": true
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[typescript]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.stickyScroll.defaultModel": "foldingProviderModel"
  },
  "[typst]": {
    "editor.defaultFormatter": "myriad-dreamin.tinymist"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "cursor.cpp.disabledLanguages": ["plaintext"],
  "debug.disassemblyView.showSourceCode": false,
  "diffEditor.maxComputationTime": 0,
  "diffEditor.wordWrap": "off",
  "editor.accessibilitySupport": "off",
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.cursorBlinking": "phase",
  "editor.fontFamily": "JetBrains Mono, Monaspace Argon Var, Fantasque Sans Mono, monospace, Electroharmonix",
  // "editor.fontLigatures": true,
  // JetBrains Mono
  // https://github.com/JetBrains/JetBrainsMono/wiki/OpenType-features
  "editor.fontLigatures": "'calt', 'zero', 'ss02', 'cv14'",
  // Monaspace
  // "editor.fontLigatures": "'calt', 'liga', 'dlig', 'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'ss07', 'ss08'",
  "editor.fontSize": 13,
  "editor.formatOnSave": true,
  "editor.formatOnType": false,
  "editor.guides.bracketPairs": true,
  "editor.guides.bracketPairsHorizontal": true,
  "editor.guides.highlightActiveIndentation": "always",
  "editor.inlineSuggest.enabled": true,
  "editor.lineNumbers": "on",
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.minimap.renderCharacters": false,
  "editor.mouseWheelZoom": true,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.renderLineHighlight": "gutter",
  "editor.renderLineHighlightOnlyWhenFocus": false,
  "editor.renderWhitespace": "all",
  "editor.semanticHighlighting.enabled": true,
  "editor.showFoldingControls": "mouseover",
  "editor.tabSize": 2,
  "editor.unicodeHighlight.invisibleCharacters": true,
  "editor.wordWrap": "off",
  "eslint.execArgv": ["--max-old-space-size=16384"],
  "eslint.lintTask.enable": true,
  "eslint.runtime": "node", // make ESLint use current Node.js version instead of VSCode's
  "eslint.useFlatConfig": true,
  // "eslint.workingDirectories": [
  //
  //   {
  //     // https://github.com/microsoft/vscode-eslint/issues/1101
  //     "mode": "auto"
  //   }
  // ],
  "files.associations": {
    ".git-blame-ignore-revs": "ignore",
    ".prototools": "toml", // https://moonrepo.dev/docs/proto/config
    "*.bu": "yaml", // https://docs.fedoraproject.org/en-US/fedora-coreos/producing-ign/
    "*.ign": "json", // https://docs.fedoraproject.org/en-US/fedora-coreos/producing-ign/
    "*.sarif": "json", // https://sarif.info/
    "*.sast": "json", // https://docs.gitlab.com/ee/user/application_security/sast/index.html#output
    "Brewfile": "ruby", // https://github.com/Homebrew/homebrew-bundle
    "Brewfile.{app,desktop,fonts,util,makedep}": "ruby", // https://github.com/Homebrew/homebrew-bundle
    "Dangerfile": "ruby", // https://danger.systems/
    "skhdrc": "shellscript",
    "yabairc": "shellscript"
  },
  "git.autorefresh": true,
  "git.autoRepositoryDetection": true,
  "git.blame.editorDecoration.enabled": false,
  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.enable": {
    "*": true,
    "jsonnet": true,
    "markdown": true,
    "plaintext": true,
    "properties": true,
    "scminput": false,
    "shellscript": true,
    "typescript": true,
    "typescriptreact": true,
    "yaml": true
  },
  "github.copilot.nextEditSuggestions.enabled": true,
  "gitlens.advanced.blame.customArguments": [],
  "gitlens.plusFeatures.enabled": false,
  "graphviz-interactive-preview.renderLockAdditionalTimeout": 5000,
  "javascript.preferences.importModuleSpecifier": "non-relative",
  "javascript.validate.enable": true,
  "jsonnet.languageServer.lint": true,
  "playwright.reuseBrowser": false,
  "problems.sortOrder": "position",
  "redhat.telemetry.enabled": false,
  "semanticdiff.closeOriginalTab": true,
  "semanticdiff.defaultDiffViewer": true,
  "settingsSync.ignoredExtensions": [
    // VSCode builtin
    "oderwat.indent-rainbow",
    "leodevbro.blockman"
  ],
  "tailscale.ssh.defaultUsername": "root",
  "terminal.integrated.stickyScroll.enabled": true,
  "tinymist.formatterMode": "typstyle",
  "todohighlight.keywords": [
    {
      "backgroundColor": "#e85854",
      "color": "#fefefe",
      "text": "FIXME:"
    },
    {
      "backgroundColor": "#57b031",
      "color": "#fefefe",
      "text": "TODO:"
    },
    {
      "backgroundColor": "#0597f2",
      "color": "#fefefe",
      "text": "MEMO:"
    },
    {
      "backgroundColor": "#dbac12",
      "color": "#fefefe",
      "text": "WARN:"
    }
  ],
  "typescript.experimental.useTsgo": false,
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "typescript.preferences.includePackageJsonAutoImports": "on",
  "typescript.tsserver.experimental.enableProjectDiagnostics": false,
  "typescript.tsserver.experimental.useVsCodeWatcher": false, // https://github.com/microsoft/vscode/issues/222098#issuecomment-2258368096
  "typescript.tsserver.maxTsServerMemory": 16384, // 16GiB
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.validate.enable": true,
  "update.mode": "start",
  "window.commandCenter": false,
  "window.menuBarVisibility": "hidden",
  "workbench.activityBar.location": "hidden",
  "workbench.colorCustomizations": {
    "activityBar.background": "#0000006a",
    "breadcrumb.background": "#00000000",
    "breadcrumbPicker.background": "#000000a0",
    "button.background": "#00000040",
    "button.foreground": "#eee",
    "button.hoverBackground": "#00000080",
    "button.secondaryForeground": "#eee",
    "editor.background": "#00000030",
    "editor.lineHighlightBackground": "#707effa0",
    "editor.lineHighlightBorder": "#c4c6d3a0",
    "editorCursor.foreground": "#80c1ff",
    "editorError.background": "#eb178149",
    "editorError.foreground": "#f9117ddb",
    "editorGroup.border": "#51abff1a",
    "editorGroupHeader.tabsBackground": "#00000050",
    "editorGutter.background": "#00000030",
    "editorLineNumber.activeForeground": "#FFF",
    "editorLineNumber.foreground": "#aaa",
    "editorStickyScroll.background": "#2c2868c5",
    "editorStickyScroll.border": "#6331b340",
    "editorWarning.background": "#ebcb1745",
    "editorWarning.foreground": "#f9c311db",
    "extensionButton.prominentForeground": "#eee",
    "input.background": "#000000a0",
    "input.border": "#51abff",
    "list.activeSelectionBackground": "#000000aa",
    "list.hoverBackground": "#00000040",
    "list.inactiveSelectionBackground": "#00000060",
    "panel.background": "#00000080",
    "panel.border": "#00000000",
    "sideBar.background": "#1111119a",
    "sideBarSectionHeader.background": "#0000",
    "statusBar.background": "#00000080",
    "statusBar.noFolderBackground": "#00000080",
    "tab.activeBackground": "#00000050",
    "tab.border": "#00000000",
    "tab.inactiveBackground": "#00000010",
    // "terminal.background": "#0000", // elvish location menu needs this
    "titleBar.activeBackground": "#00000030",
    // "workbench.background": "#00000080" // only in code-transparent
    "window.background": "#00000080"
  },
  "workbench.colorTheme": "Catppuccin Frapp√©",
  "workbench.editor.empty.hint": "hidden",
  "workbench.iconTheme": "vscode-stardew-icon-theme-autumn",
  "workbench.layoutControl.enabled": false,
  "workbench.localHistory.enabled": true,
  "workbench.localHistory.maxFileEntries": 500,
  "workbench.localHistory.maxFileSize": 512,
  "workbench.sideBar.location": "left",
  "yaml.customTags": [
    // GitLab's custom tag
    // @see https://docs.gitlab.com/ee/ci/yaml/yaml_optimization.html#configure-your-ide-to-support-reference-tags
    "!reference sequence"
  ],
  "zenMode.hideLineNumbers": false,
  "zenMode.hideStatusBar": false
}
